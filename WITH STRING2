#include <LiquidCrystal.h>


const int rs=7,en=8,d4=9,d5=10,d6=11,d7=12;
LiquidCrystal lcd(rs,en,d4,d5,d6,d7);

//3 is green
//6 is blue
//11 is red
const int trigPin = 4;
const int echoPin = 2;
// defines variables
long duration;
int distance;
void setup() {
  pinMode(trigPin, OUTPUT); // Sets the trigPin as an Output
  pinMode(echoPin, INPUT); // Sets the echoPin as an Input
  Serial.begin(9600); // Starts the serial communication
  pinMode(3,OUTPUT);
  pinMode(5,OUTPUT);
  pinMode(6,OUTPUT);
  lcd.begin(16,2);
  lcd.print(distance);
}
void loop() {

  for (int i=0;i<2;i++){
    for(int l=0;l<16;l++){
      lcd.setCursor(0+l,i);
      lcd.print(" ");
    }
  }
  
// Clears the trigPin
  digitalWrite(trigPin, LOW);
  delayMicroseconds(2);
// Sets the trigPin on HIGH state for 10 micro seconds
  digitalWrite(trigPin, HIGH);
  delayMicroseconds(10);
  digitalWrite(trigPin, LOW);
// Reads the echoPin, returns the sound wave travel time in microseconds
  duration = pulseIn(echoPin, HIGH);
// Calculating the distance
  distance= (duration/29/2)*0.393701;
// Prints the distance on the Serial Monitor
    
  if(distance>=70&distance<=100){     //yellow
    analogWrite(3,100);
    analogWrite(6,0);
    analogWrite(5,255);
  }
  if(50<distance&distance<70){ //red
    analogWrite(3,0);
    analogWrite(5,255);
    analogWrite(6,0);
  }
  if(distance>100&distance<130){     //green
    analogWrite(3,255);
    analogWrite(5,0);
    analogWrite(6,0);
  }
  if(distance<50){     //purple
    analogWrite(3,0);
    analogWrite(5,255);
    analogWrite(6,255);
  }

  if(distance>130&distance<600){   //blue
    analogWrite(3,0);
    analogWrite(5,0);
    analogWrite(6,255);
  }
 
  if(distance<=600){
    lcd.setCursor(0,1);
    lcd.print(distance);
  }
  if (distance>600){
    lcd.setCursor(0,0);
    lcd.print("Way to far");
    lcd.setCursor(0,2);
    lcd.print("Cannot Compute");
    analogWrite(3,255);
    analogWrite(5,255);
    analogWrite(6,255);
    
}
  delay(100);
 

lcd.setCursor(0,1);
lcd.print(distance);
  
  
  
}




// light sensor
// buttons
// scale of how far away something is
// lcd 
// joystick
// fan
// servo
